<nop-alert asp-alert-id="setAsDeliveredSelectedFailed" />

<script>
                $(document).ready(function () {
                    $('#exportpackagingslips-selected').click(function (e) {
                        e.preventDefault();
                        var ids = selectedIds.join(",");
